package edu.sru.dsm1015.TrafficSim.gui;

import java.awt.Color;
import java.awt.Graphics;
import java.awt.Graphics2D;
import java.util.Set;

import javax.swing.JComponent;

import edu.sru.dsm1015.TrafficSim.agent.Citizen;
import edu.sru.dsm1015.TrafficSim.grid.Cell;
import edu.sru.dsm1015.TrafficSim.grid.Grid;

public class WaypointOverlay extends JComponent {
	
	private Grid grid;
    private boolean visible;

    public WaypointOverlay(Grid grid) {
        this.grid = grid;
        this.visible = false;
        setOpaque(false); // make the background transparent
    }

    @Override
    protected void paintComponent(Graphics g) {
        if (!visible) {
            return;
        }

        super.paintComponent(g);

        Graphics2D g2d = (Graphics2D) g;
        for (int i = 0; i < Grid.getWidth(); i++) {
            for (int j = 0; j < Grid.getHeight(); j++) {
                Cell cell = grid.getCell(i, j);
                int numberOfWaypoints = cell.getWaypoints().size();
                float intensity = Math.min(1, numberOfWaypoints / 10f);
                g2d.setColor(new Color(0, 0, 1, intensity));
                g2d.fillRect(cell.getButton().getX(), cell.getButton().getY(), cell.getButton().getWidth(), cell.getButton().getHeight());
            }
        }
    }

    public void toggleVisibility() {
        visible = !visible;
        if (visible) {
            repaint();
        }
    }

    public boolean isVisible() {
        return this.visible;
    }
}
